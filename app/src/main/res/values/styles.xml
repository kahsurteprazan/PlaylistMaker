<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Btn_MainActivity_Style" parent="Widget.Material3.Button">
        <!-- Размеры -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>

        <!-- Цвета -->
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>

        <!-- Шрифт -->
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>

        <!-- Адаптивные элементы -->
        <item name="android:foreground">?attr/selectableItemBackground</item>

        <!-- Применение атрибутов для кнопки -->
        <item name="cornerRadius">@dimen/buttun_radius_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_Padding</item>
        <item name="iconTint">@color/black</item>
        <!-- Убираем тень -->
        <item name="android:elevation">0dp</item>
    </style>

    <style name="FrameLayout_Styles_InSettings">
        <!-- Размеры -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_height_btn_setting</item>
        <item name="android:padding">@dimen/padding_btn_setting</item>

        <!-- Цвета -->
        <item name="android:backgroundTint">@color/white</item>

        <!-- Эффекты -->
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TextStyle_InSetting">
        <!-- Размеры -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>

        <!-- Цвета -->
        <item name="android:textColor">@color/Main_Text_Colors</item>

        <!-- Шрифт -->
        <item name="android:textSize">@dimen/text_size_setting</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ImageStyle_InSetting">
        <!-- Размеры -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
    </style>


</resources>